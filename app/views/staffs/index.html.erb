<div class="cols-grids panel-widget">
<p id="notice"><%= notice %></p>

<h2>スタッフ一覧</h2>

<table>
  <thead>
    <tr>
      <th class="col-xs-2 col-ms-2 col-md-2">名前</th>
      <th class="col-xs-2 col-ms-2 col-md-2">Email</th>
      <th class="col-xs-2 col-ms-2 col-md-2">電話番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td class="col-xs-2 col-ms-2 col-md-2" align="left"><%= staff.name %></td>
        <td class="col-xs-2 col-ms-2 col-md-2" align="left"><%= staff.email %></td>
        <td class="col-xs-2 col-ms-2 col-md-2" align="left"><%= staff.tel %></td>
        <td><%= link_to '詳細を確認', staff ,class: 'btn btn-info'%></td>
        <td><%= link_to '編集', edit_staff_path(staff) ,class: 'btn btn-warning'%></td>
        <td><%= link_to '削除', staff, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'スタッフ新規作成', new_staff_path ,class: 'btn btn-success'%>
</div>
