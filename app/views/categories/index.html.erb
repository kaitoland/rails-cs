<div class="cols-grids panel-widget">
<p id="notice"><%= notice %></p>

<h1>カテゴリ一覧</h1>

<table>
  <thead>
    <tr>
      <th class="col-xs-1 col-ms-1 col-md-1">id</th>
      <th class="col-xs-3 col-ms-3 col-md-3">カテゴリ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td class="col-xs-1 col-ms-1 col-md-1" align="left"><%= category.id %></td>
        <td class="col-xs-3 col-ms-3 col-md-3" align="left"><%= category.name %></td>
        <td><%= link_to '詳細を確認', category ,class: 'btn btn-info'%></td>
        <td><%= link_to '編集', edit_category_path(category),class: 'btn btn-warning' %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'カテゴリ新規作成', new_category_path ,class: 'btn btn-success'%>
</div>
